{
  "name": "learning-jazzer",
  "license": "MIT",
  "scripts": {
    "fuzz": "JAZZER_FUZZ=1 jest --testNamePattern=\"fuzz\"",
    "fuzz_regression": "JAZZER_FUZZ=0 jest --testNamePattern=\"fuzz\" # checks against previously-found failures since jazzer stores bugs it found earlier",
    "test": "jest --bail --findRelatedTests *.test.js # for NON-fuzz tests. or for both test and fuzz: jest --testPathMatch=\"integration.test.js\"",
    "lint": "prettier --write *.{js,css,html,scss,json,md,ts,tsx}"
  },
  "devDependencies": {
    "@jazzer.js/core": "2.1.0",
    "@jazzer.js/jest-runner": "2.1.0",
    "husky": "^4.3.0",
    "jest": "^29.7.0",
    "lint-staged": "^12.1.3",
    "prettier": "^2.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "projects": [
      {
        "displayName": "test"
      },
      {
        "testRunner": "@jazzer.js/jest-runner",
        "displayName": {
          "name": "Jazzer.js",
          "color": "cyan"
        },
        "testMatch": [
          "<rootDir>/**/*.fuzz.js"
        ]
      }
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "npm run test"
    ],
    "*.{js,css,html,scss,json,md,ts,tsx}": "prettier --write"
  }
}
